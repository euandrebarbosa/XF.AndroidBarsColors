<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.AndroidBarsColors.MainPage"
             Title="MainPage">

    <StackLayout
        Margin="20,0"
        VerticalOptions="CenterAndExpand">
        <Button
            x:Name="btnRedBars"
            HeightRequest="50"
            BackgroundColor="#FE0505"
            TextColor="White"
            Text="Go to RED BARS!"/>
        <Button
            x:Name="btnGreenBars"
            HeightRequest="50"
            BackgroundColor="#7AF389"
            TextColor="White"
            Text="Go to GREEN BARS!"/>
    </StackLayout>

</ContentPage>
